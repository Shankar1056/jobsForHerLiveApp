<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginBottom="50dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <!-- HEADER -->
    <LinearLayout
            android:id="@+id/top_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:padding="15dp"
            android:orientation="horizontal"
            android:weightSum="1">



        <TextView
                android:id="@+id/filter_sidecancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter"
                android:textSize="18sp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_close_black"
                android:drawableTint="@color/white"
                android:textColor="@color/white"
                android:layout_weight="1"/>

        <ImageView
                android:id="@+id/close_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/ic_close_black"
                android:layout_gravity="right"
        />

        <TextView
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RESET"
                android:textSize="18sp"
                android:drawablePadding="5dp"
                android:textColor="@color/white"
                android:layout_weight="1"/>


    </LinearLayout>

    <LinearLayout
            android:id="@+id/bottom_menu"
            android:layout_below="@id/top_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CFCACA"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginBottom="5dp"
                android:padding="10dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:paddingStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:text="Search Groups by keywords"/>

            <EditText
                    android:id="@+id/keyword_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:paddingStart="10dp"
                    android:layout_gravity="center_vertical"
            />

        </LinearLayout>


    </LinearLayout>

    <!-- MAIN PART -->

    <LinearLayout
            android:layout_below="@id/bottom_menu"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="2"
            android:layout_above="@id/last_menu"
            android:background="@color/white"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@color/lightestgrey"
                android:layout_weight="1.3"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Category"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CFCACA"/>
            <TextView
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:padding="10dp"
                    android:text="City"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CFCACA"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.3"
                android:background="@color/white"
                android:orientation="vertical">
            <SearchView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:queryHint="Search Here"
                    android:iconifiedByDefault="false">

                <requestFocus />
            </SearchView>
            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:scrollbars="none">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_filtercategory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:layout_marginStart="4dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="8dp"
                    />
                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_filtercity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_marginStart="4dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="8dp"
                    />
                </LinearLayout>


            </ScrollView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/last_menu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CFCACA"/>

        <LinearLayout
                android:id="@+id/layout_pickimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
        >

            <TextView android:id="@+id/filter_reset"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="@color/white"
                      android:padding="10dp"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:text="RESET"/>

            <TextView android:id="@+id/filter_apply"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="@color/green"
                      android:padding="10dp"
                      android:layout_weight="1"
                      android:textColor="@color/white"
                      android:gravity="center"
                      android:text="APPLY"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>