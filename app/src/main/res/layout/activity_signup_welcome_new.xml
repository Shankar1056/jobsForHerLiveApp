<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient">

    <include
            layout="@layout/toolbar_welcome"
            android:id="@+id/toolbarid"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbarid"
            android:scrollbars="none" android:layout_alignParentStart="true" android:layout_marginTop="0dp"
            android:layout_marginStart="0dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView android:id="@+id/headline1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="20dp"
                      android:layout_gravity="center"
                      android:text="@string/congrtulations"
                      android:textColor="#5B5B5B"
                      android:fontFamily="@font/opensanssemibold"
                      android:textSize="24sp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/create_ur_career_profile"
                    android:layout_gravity="center"
                    android:textColor="#5B5B5B"
                    android:fontFamily="@font/opensanssemibold"
                    android:textSize="24sp"/>

            <TextView
                    android:id="@+id/subheadline1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="@string/how_should_womens_career_be_showcased"
                    android:layout_gravity="center"
                    android:textColor="#5B5B5B"
                    android:fontFamily="@font/opensansregular"
                    android:textAlignment="center"
                    android:textSize="18sp"/>

            <LinearLayout
                    android:id="@+id/linearlayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/subheadline1"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp">

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/work_button"
                        android:background="@drawable/triangular_background_up"
                        android:textColor="@color/white"
                        android:drawablePadding="10dp"
                        android:padding="10dp"
                        android:tint="@color/white"
                        android:fontFamily="@font/opensanssemibold"
                        android:drawableStart="@drawable/ic_briefcase_filledd"
                        style="?android:attr/borderlessButtonStyle"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/plus_button"
                          android:layout_gravity="center"
                          android:textSize="20sp"
                          android:layout_marginLeft="10dp"
                          android:layout_marginRight="10dp"
                          android:textColor="@color/white"/>

                <Button android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/life_button"
                        android:background="@drawable/triangular_background_up"
                        android:textColor="@color/white"
                        android:drawableStart="@drawable/ic_favorite_heart_button"
                        android:drawablePadding="10dp"
                        android:padding="10dp"
                        android:fontFamily="@font/opensanssemibold"
                        style="?android:attr/borderlessButtonStyle"/>

            </LinearLayout>

            <TextView android:id="@+id/sublayout"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/equals_text"
                      android:layout_gravity="center_horizontal"
                      android:layout_centerHorizontal="true"
                      android:textColor="@color/white"
                      android:layout_below="@id/linearlayout1"
                      android:textSize="22sp"/>

            <Button
                    android:id="@+id/totalexp_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sublayout"
                    android:text="@string/total_experience"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="120dp"
                    android:padding="10dp"
                    android:fontFamily="@font/opensanssemibold"
                    android:drawableStart="@drawable/ic_multitasking_woman"
                    android:background="@drawable/triangular_background_up_large"
                    style="?android:attr/borderlessButtonStyle"/>

            <TextView android:id="@+id/tvProfileUrlTitle"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"
                      android:layout_marginTop="30sp"
                      android:text="@string/ur_profile_url"
                      android:textColor="#5B5B5B"
                      android:padding="5dp"
                      android:fontFamily="@font/opensanssemibold"
                      android:layout_below="@id/totalexp_button"
                      android:textSize="20sp"/>

            <TextView android:id="@+id/tvProfileUrl"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"
                      android:layout_marginTop="10sp"
                      android:text="@string/ur_profile_url"
                      android:textColor="#5B5B5B"
                      android:padding="5dp"
                      android:fontFamily="@font/opensanssemibold"
                      android:layout_below="@id/tvProfileUrlTitle"
                      android:textSize="14sp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/tvProfileUrl"
                    android:id="@+id/edittext_layout">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                    <EditText
                            android:id="@+id/edtProfileUrl"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:hint="@string/hint_text"
                            android:textColor="#5B5B5B"
                            android:textColorHint="#7E5B5B5B"
                            android:lines="1"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:backgroundTint="@color/smsp_transparent_color"/>

                    <ImageView
                            android:id="@+id/btnEdit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:scaleType="center"
                            android:background="@drawable/ic_edit"/>

                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:background="@color/black"/>

                <TextView android:id="@+id/tvUsernameAlreadyExists"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="#F13C30"
                          android:fontFamily="@font/opensanssemibold"
                          android:textSize="10sp"/>

            </LinearLayout>

            <Button
                    android:id="@+id/btnGetStarted"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@id/edittext_layout"
                    android:text="@string/get_started"
                    android:layout_centerHorizontal="true"
                    android:backgroundTint="@color/white"
                    android:textColor="#5B5B5B"
                    android:fontFamily="@font/opensansbold"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textAllCaps="false"/>

            <Button
                    android:id="@+id/il_do_later"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ill_do_it_later"
                    android:layout_centerHorizontal="true"
                    android:backgroundTint="@color/white"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:textAllCaps="false"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/background_border"
                    android:textColor="@color/white"/>

        </LinearLayout>
    </ScrollView>



</RelativeLayout>
