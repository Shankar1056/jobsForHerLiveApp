<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.ViewPagerActivity">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:layout_height="wrap_content">

        <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <com.arindicatorview.ARIndicatorView
                android:id="@+id/ar_indicator_viewpager"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                app:indicator_size="25"
                app:number_of_indicators="5"
                android:layout_margin="10dp"
                android:layout_marginTop="-10dp"
                app:selected_color="@color/colorPrimary"/>

    </FrameLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="-40dp"
            android:weightSum="1">

        <Button
                android:id="@+id/btnSignIn"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="30dp"
                android:text="Sign In"
                android:textColor="@color/black"
                android:background="#E5EBE4"
                android:fontFamily="@font/opensanssemibold"
                android:layout_marginEnd="5dp"
                android:textStyle="bold"
                android:textAllCaps="false"/>
        <Button
                android:id="@+id/btnSignUp"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/opensanssemibold"
                android:text="Sign Up"
                android:textColor="@color/black"
                android:background="#E5EBE4"
                android:textStyle="bold"
                android:textAllCaps="false"/>

    </LinearLayout>

</LinearLayout>
