<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
        android:orientation="vertical"
              android:layout_height="wrap_content"
              android:gravity="bottom"
              android:background="@color/white">
    <LinearLayout android:id="@+id/cancelblock"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="5dp">
        <TextView android:id="@+id/textreports"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  android:drawablePadding="10dp"
                  android:drawableLeft="@drawable/ic_close_black"
                  android:drawableTint="@color/lightestgrey1"
                  android:text="Report or give feedback"/>
    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:background="@color/lightestgrey"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="15dp"
                  android:orientation="vertical">
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="12dp"
                  android:text="Help us understand your problem"/>
        <Spinner
                android:id="@+id/report_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/edit_post"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="15dp"
                  android:orientation="vertical">
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="12dp"
                  android:text="Help us understand your reason"/>
        <EditText android:id="@+id/reportdetails"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                  android:lines="4"/>
    </LinearLayout>


    <LinearLayout android:id="@+id/sendreport"
                  android:background="@color/green"
                  android:layout_marginBottom="15dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="10dp"
                  android:layout_marginLeft="10dp"
                  android:padding="12dp">

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_horizontal"

                  android:text="Send Report"/>
    </LinearLayout>
</LinearLayout>
