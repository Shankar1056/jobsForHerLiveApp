<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        app:cardCornerRadius="3dp"
        app:cardBackgroundColor="@color/white"
        android:elevation="0dp"
        app:cardElevation="0dp"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        card_view:cardCornerRadius="3dp">

    <ImageView
            android:id="@+id/row_icon"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/curved_grey_border_filled"
            android:elevation="2dp"/>

    <LinearLayout
            android:id="@+id/llCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:background="@drawable/cardview_border"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingLeft="30dp"
                android:orientation="horizontal"
                android:layout_weight="1">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="2dp"
                    android:orientation="vertical"
                    android:layout_weight="0.8">

                <TextView
                        android:id="@+id/row_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:text="MyGroups "
                        android:singleLine="true"/>

                <TextView
                        android:id="@+id/row_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:textColor="@color/lightgrey"
                        android:drawablePadding="2dp"
                        android:drawableStart="@drawable/ic_tag"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:padding="2dp"
                        android:singleLine="true"/>

                <TextView
                        android:id="@+id/tv_grouptype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:textColor="@color/lightgrey"
                        android:drawablePadding="2dp"
                        android:drawableStart="@drawable/ic_global"
                        android:textSize="14sp"
                        android:padding="2dp"
                        android:singleLine="true"/>

                <TextView
                        android:id="@+id/row_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:textColor="@color/lightgrey"
                        android:drawablePadding="2dp"
                        android:drawableStart="@drawable/ic_placeholder"
                        android:textSize="14sp"
                        android:padding="2dp"
                        android:visibility="gone"
                        android:gravity="center_vertical"
                        android:singleLine="true"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                <TextView
                        android:id="@+id/row_noOfMembers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:textColor="@color/lightgrey"
                        android:textSize="14sp"
                        android:padding="2dp"
                        android:singleLine="true"/>

                <com.jobsforher.customviews.CustomFontButton
                        android:visibility="visible"
                        android:id="@+id/btnJoined"
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:text="@string/joined"
                        android:layout_gravity="end"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:layout_marginStart="25dp"
                        android:textAllCaps="false"
                        android:background="@drawable/curved_grey_without_border"
                        android:layout_height="35dp"/>

                <Button
                        android:id="@+id/join_group"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:textColor="@color/white"
                        android:text="Join Group"

                        android:layout_gravity="end"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:background="@drawable/curved_green_border_filled_white_adapter"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:paddingLeft="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_weight="1">

            <TextView
                    android:id="@+id/row_description"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="fill_vertical"
                    android:textColor="@color/lightgrey"
                    android:textSize="14sp"
                    android:padding="2dp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:lineSpacingExtra="6dp"
                    android:layout_marginBottom="5dp"
                    android:includeFontPadding="false"
                    android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>


