<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            android:id="@+id/top_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="15dp"
            android:orientation="horizontal"
            android:weightSum="1">

        <ImageView

                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_black"
                android:layout_weight=".1"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:text="Replies"
                android:textSize="18sp"
                android:textColor="@color/menu_grey"
                android:layout_weight=".7"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/main"
            android:layout_below="@id/top_header"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
        <!--<ImageView-->
        <!--android:layout_width="40dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:src="@drawable/ic_user"-->
        <!--android:id="@+id/commenticon_page2"/>-->
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/commenticon_page2"
                android:src="@drawable/ic_user"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_circle"
                android:layout_centerHorizontal="true"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">
            <LinearLayout
                    android:id="@+id/longclick_block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/curved_border_comments"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/commentusername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/comments_pink"
                        android:layout_marginLeft="10dp"
                        android:text="Name"
                        android:textStyle="bold"
                        android:textSize="14dp"/>
                <TextView
                        android:id="@+id/commentdatetime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/lightgrey"
                        android:layout_marginLeft="10dp"
                        android:text="Name"
                        android:textStyle="normal"
                        android:textSize="10dp"/>
                <TextView
                        android:id="@+id/commentdata"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Description of the comment..."
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:textSize="12dp"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginBottom="2dp"
                    android:orientation="horizontal">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                    <TextView
                            android:id="@+id/comment_upvote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:drawableRight="@drawable/ic_upvote"
                            android:drawablePadding="3dp"
                            android:text="10"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Upvote"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                    <TextView
                            android:id="@+id/comment_downvote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:drawablePadding="3dp"
                            android:drawableRight="@drawable/ic_downvote"
                            android:text="10"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Downvote"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                    <TextView
                            android:id="@+id/comment_replies"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:drawableRight="@drawable/ic_reply"
                            android:drawablePadding="3dp"
                            android:text="10"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Replies"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <androidx.core.widget.SwipeRefreshLayout
            android:id="@+id/my_swipeRefresh_Layout1"
            android:layout_below="@id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/replies_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="10dp"
                android:scrollbars="vertical"
                android:layout_below="@id/main"
                android:nestedScrollingEnabled="false"
        />
    </androidx.core.widget.SwipeRefreshLayout>
</RelativeLayout>
