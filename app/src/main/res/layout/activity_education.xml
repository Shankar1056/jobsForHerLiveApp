<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background_gradient_">

    <!-- HEADER -->
    <include
            android:id="@+id/top_header"
            layout="@layout/toolbar_welcome"/>

    <!-- FOOTER -->
    <LinearLayout
            android:id="@+id/bottom_menu"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

        <!-- menu bar -->
        <include
                layout="@layout/layout_empty"/>

    </LinearLayout>

    <!-- MAIN PART -->
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_header"
            android:layout_above="@id/bottom_menu"
            android:scrollbars="none">

        <LinearLayout
                android:id="@+id/sub_content_view"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content">

            <com.jobsforher.customviews.CustomBoldFontTextView
                    android:layout_width="match_parent"
                    android:textColor="#5B5B5B"
                    android:textSize="20sp"
                    android:text="Tell us about your \n Education"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/opensansbold"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlCompat"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                <com.jobsforher.customviews.CustomBoldFontTextView
                        android:layout_width="wrap_content"
                        android:textColor="#5B5B5B"
                        android:textSize="20sp"
                        android:text="What is your highest qualification?*"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:fontFamily="@font/opensansbold"
                        android:lines="2"
                        android:textAlignment="textStart"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content"
                        tools:ignore="RtlCompat"/>

                <!--<women.jobs.jobsforher.customviews.CustomFontEditText-->
                <!--android:id="@+id/etDegree"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="52dp"-->
                <!--android:hint="Eg: Bachelor of Engineering"-->
                <!--android:inputType="textCapWords"-->
                <!--android:fontFamily="@font/opensansregular"-->
                <!--android:textColor="#5B5B5B"-->
                <!--android:textColorHint="#7E5B5B5B"-->
                <!--android:backgroundTint="#5B5B5B"-->
                <!--android:focusable="false"-->
                <!--android:drawableEnd="@drawable/ic_expand_more_dark_grey"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:textSize="14sp"/>-->

                <AutoCompleteTextView
                        android:id="@+id/etDegree"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:hint="Eg: Bachelor of Engineering"
                        android:inputType="textCapWords"
                        android:fontFamily="@font/opensansregular"
                        android:textColor="#5B5B5B"
                        android:textColorHint="#7E5B5B5B"
                        android:backgroundTint="#5B5B5B"
                        android:focusable="true"
                        android:drawableEnd="@drawable/ic_expand_more_dark_grey"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"/>

                <com.jobsforher.customviews.CustomBoldFontTextView
                        android:layout_width="wrap_content"
                        android:textColor="#5B5B5B"
                        android:textSize="20sp"
                        android:text="At which college/university?*"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:fontFamily="@font/opensansbold"
                        android:lines="1"
                        android:textAlignment="textStart"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content"
                        tools:ignore="RtlCompat"/>

                <!--<women.jobs.jobsforher.customviews.CustomFontEditText-->
                <!--android:id="@+id/etCollege"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="52dp"-->
                <!--android:hint="Eg: Amity University"-->
                <!--android:inputType="textCapWords"-->
                <!--android:fontFamily="@font/opensansregular"-->
                <!--android:textColor="#5B5B5B"-->
                <!--android:textColorHint="#7E5B5B5B"-->
                <!--android:backgroundTint="#5B5B5B"-->
                <!--android:focusable="false"-->
                <!--android:drawableEnd="@drawable/ic_expand_more_dark_grey"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:textSize="14sp"/>-->

                <AutoCompleteTextView
                        android:id="@+id/etCollege"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:hint="Eg: Amity University"
                        android:inputType="textCapWords"
                        android:fontFamily="@font/opensansregular"
                        android:textColor="#5B5B5B"
                        android:textColorHint="#7E5B5B5B"
                        android:backgroundTint="#5B5B5B"
                        android:focusable="true"
                        android:drawableEnd="@drawable/ic_expand_more_dark_grey"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:weightSum="1">

                    <com.jobsforher.customviews.CustomBoldFontTextView
                            android:layout_width="0dp"
                            android:textColor="#5B5B5B"
                            android:textSize="20sp"
                            android:text="Please enter the duration*"
                            android:layout_gravity="start"
                            android:gravity="start"
                            android:fontFamily="@font/opensansbold"
                            android:textAlignment="textStart"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:ignore="RtlCompat"/>

                    <CheckBox
                            android:id="@+id/cb_eduongoing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="onCheckboxEducationClicked"
                            android:layout_weight="0"
                            android:text="Ongoing"/>


                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:weightSum="1">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginEnd="5dp"
                            android:layout_weight=".5">

                        <com.jobsforher.customviews.CustomBoldFontTextView
                                android:layout_width="match_parent"
                                android:textColor="#5B5B5B"
                                android:textSize="20sp"
                                android:text="From"
                                android:layout_gravity="start"
                                android:gravity="start"
                                android:fontFamily="@font/opensansbold"
                                android:textAlignment="textStart"
                                android:layout_height="wrap_content"
                                tools:ignore="RtlCompat"/>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="1"
                                android:orientation="horizontal">

                            <com.jobsforher.customviews.CustomFontEditText
                                    android:id="@+id/etFromMonth"
                                    android:layout_width="0dp"
                                    android:layout_height="52dp"
                                    android:hint="Eg: Aug"
                                    android:layout_weight=".5"
                                    android:inputType="textCapWords"
                                    android:fontFamily="@font/opensansregular"
                                    android:textColor="#5B5B5B"
                                    android:textColorHint="#7E5B5B5B"
                                    android:backgroundTint="#5B5B5B"
                                    android:focusable="false"
                                    android:drawableEnd="@drawable/ic_expand_more_dark_grey_small"
                                    android:layout_marginTop="5dp"
                                    android:textSize="12sp"/>

                            <com.jobsforher.customviews.CustomFontEditText
                                    android:id="@+id/etFromYear"
                                    android:layout_width="0dp"
                                    android:layout_height="52dp"
                                    android:hint="Eg:2019"
                                    android:layout_weight=".5"
                                    android:inputType="textCapWords"
                                    android:fontFamily="@font/opensansregular"
                                    android:textColor="#5B5B5B"
                                    android:textColorHint="#7E5B5B5B"
                                    android:backgroundTint="#5B5B5B"
                                    android:focusable="false"
                                    android:drawableEnd="@drawable/ic_expand_more_dark_grey_small"
                                    android:layout_marginTop="5dp"
                                    android:textSize="12sp"/>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/llToDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="5dp"
                            android:layout_weight=".5">

                        <com.jobsforher.customviews.CustomBoldFontTextView
                                android:layout_width="match_parent"
                                android:textColor="#5B5B5B"
                                android:textSize="20sp"
                                android:text="To"
                                android:layout_gravity="start"
                                android:gravity="start"
                                android:fontFamily="@font/opensansbold"
                                android:textAlignment="textStart"
                                android:layout_height="wrap_content"
                                tools:ignore="RtlCompat"/>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="1"
                                android:orientation="horizontal">

                            <com.jobsforher.customviews.CustomFontEditText
                                    android:id="@+id/etToMonth"
                                    android:layout_width="0dp"
                                    android:layout_height="52dp"
                                    android:hint="Eg: Aug"
                                    android:layout_weight=".5"
                                    android:inputType="textCapWords"
                                    android:fontFamily="@font/opensansregular"
                                    android:textColor="#5B5B5B"
                                    android:textColorHint="#7E5B5B5B"
                                    android:backgroundTint="#5B5B5B"
                                    android:focusable="false"
                                    android:drawableEnd="@drawable/ic_expand_more_dark_grey_small"
                                    android:layout_marginTop="5dp"
                                    android:textSize="12sp"/>

                            <com.jobsforher.customviews.CustomFontEditText
                                    android:id="@+id/etToYear"
                                    android:layout_width="0dp"
                                    android:layout_height="52dp"
                                    android:hint="Eg:2019"
                                    android:layout_weight=".5"
                                    android:inputType="textCapWords"
                                    android:fontFamily="@font/opensansregular"
                                    android:textColor="#5B5B5B"
                                    android:textColorHint="#7E5B5B5B"
                                    android:backgroundTint="#5B5B5B"
                                    android:focusable="false"
                                    android:drawableEnd="@drawable/ic_expand_more_dark_grey_small"
                                    android:layout_marginTop="5dp"
                                    android:textSize="12sp"/>


                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>


                <Button
                        android:id="@+id/btnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/opensansbold"
                        android:backgroundTint="@color/white"
                        android:textColor="#000000"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:textAllCaps="false"/>

                <com.jobsforher.customviews.CustomBoldFontTextView
                        android:id="@+id/tvSkip"
                        android:layout_width="wrap_content"
                        android:textColor="#5B5B5B"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"
                        android:text="Skip"
                        android:layout_gravity="end"
                        android:gravity="start"
                        android:fontFamily="@font/opensansbold"
                        android:textAlignment="textStart"
                        android:layout_height="wrap_content"
                        tools:ignore="RtlCompat"/>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>