<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp"
        android:elevation="1dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:orientation="vertical"
            android:visibility="visible"
            android:id="@+id/comment_block">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
            <!--<ImageView-->
            <!--android:layout_width="40dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:src="@drawable/ic_user"-->
            <!--android:id="@+id/commenticon_page2"/>-->
            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/commenticon_page2"
                    android:src="@drawable/ic_user"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_circle"
                    android:layout_centerHorizontal="true"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">
                <LinearLayout
                        android:id="@+id/longclick_block"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/curved_border_comments"
                        android:orientation="vertical">
                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                        <TextView
                                android:id="@+id/commentusername"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/comments_pink"
                                android:layout_marginLeft="10dp"
                                android:text="Name"
                                android:textStyle="bold"
                                android:textSize="14dp"/>
                        <TextView
                                android:id="@+id/seemore"
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:textColor="@color/lightgrey"
                                android:text="@string/horizontal_ellipsis"
                                android:textSize="20dp"
                                android:layout_marginEnd="4dp"
                                android:textStyle="bold"
                                android:layout_marginTop="-5dp"
                                android:layout_marginBottom="-5dp"
                                android:singleLine="true"/>
                    </RelativeLayout>

                    <TextView
                            android:id="@+id/commentdatetime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/lightgrey"
                            android:layout_marginLeft="10dp"
                            android:text="Name"
                            android:textStyle="normal"
                            android:textSize="10dp"/>
                    <TextView
                            android:id="@+id/commentdata"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Description of the comment..."
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"
                            android:textSize="12dp"/>
                </LinearLayout>
                <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal">
                    <TextView android:id="@+id/status_textview_comments"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:visibility="gone"/>
                    <LinearLayout
                            android:id="@+id/comment_upvote_block"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                        <TextView
                                android:id="@+id/comment_upvote"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:drawableRight="@drawable/ic_upvote"
                                android:drawablePadding="3dp"
                                android:text="10"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="Upvote"/>

                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/comment_downvote_block"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                        <TextView
                                android:id="@+id/comment_downvote"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:drawablePadding="3dp"
                                android:drawableRight="@drawable/ic_downvote"
                                android:text="10"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="Downvote"/>

                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/comment_replies_block"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                        <TextView
                                android:id="@+id/comment_replies"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:drawableRight="@drawable/ic_reply"
                                android:drawablePadding="3dp"
                                android:text="10"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="Replies"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_below="@id/comments_recycler_view"
                android:id="@+id/reply_block">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightgrey"
                    android:text="View All Replies"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="12dp"
                    android:id="@+id/replyText"/>

            <LinearLayout
                    android:id="@+id/reply_block_whole"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="horizontal">

                <!--<ImageView-->
                <!--android:layout_width="30dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:src="@drawable/ic_user"-->
                <!--android:id="@+id/replyicon"/>-->
                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/replyicon"
                        android:src="@drawable/ic_user"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_circle"
                        android:layout_centerHorizontal="true"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                        <TextView
                                android:id="@+id/replyusername"
                                android:layout_width="wrap_content"
                                android:textColor="@color/comments_pink"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="Name"
                                android:textStyle="bold"
                                android:textSize="12dp"/>
                        <TextView
                                android:id="@+id/replydatetime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="Name"
                                android:visibility="gone"
                                android:textStyle="normal"
                                android:textSize="10dp"/>
                        <TextView
                                android:id="@+id/replydata"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="Description of the comment..."
                                android:textStyle="bold"
                                android:textSize="12dp"/>
                    </LinearLayout>
                    <LinearLayout
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:orientation="horizontal">
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                            <TextView
                                    android:id="@+id/reply_upvote"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:drawableRight="@drawable/ic_upvote"
                                    android:drawablePadding="3dp"
                                    android:text="10"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Upvote"/>

                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                            <TextView
                                    android:id="@+id/reply_downvote"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:drawablePadding="3dp"
                                    android:drawableRight="@drawable/ic_downvote"
                                    android:text="10"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Downvote"/>

                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                            <TextView
                                    android:id="@+id/reply_replies"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:drawableRight="@drawable/ic_reply"
                                    android:drawablePadding="3dp"
                                    android:text="10"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Replies"/>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <TextView
                        android:id="@+id/seemoreReply"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/lightgrey"
                        android:text="@string/horizontal_ellipsis"
                        android:textSize="20dp"
                        android:layout_marginEnd="20dp"
                        android:textStyle="bold"
                        android:layout_marginTop="-5dp"
                        android:layout_marginBottom="-5dp"
                        android:singleLine="true"/>

            </LinearLayout>

        </LinearLayout>


        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:background="@color/lightestgrey"/>
        <LinearLayout
                android:visibility="gone"
                android:id="@+id/coment_post1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
        >
            <!--<ImageView android:id="@+id/ic_add"-->
            <!--android:layout_width="40dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@drawable/ic_add"/>-->
            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ic_add"
                    android:src="@drawable/ic_user"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_circle"
                    android:layout_centerHorizontal="true"/>
            <EditText
                    android:id="@+id/coment_edittext1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Write something here.."
                    android:layout_marginLeft="5dp"
                    android:drawableRight="@drawable/ic_send_icon"
                    android:textSize="12dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/curved_grey_border_filled"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>