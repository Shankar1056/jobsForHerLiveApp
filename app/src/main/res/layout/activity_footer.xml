<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_foote_border"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="4">

    <LinearLayout
            android:id="@+id/newsfeed_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="2dp">

        <ImageView
                android:id="@+id/home_image"
                android:layout_width="25dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:background="@drawable/ic_newsfeed_home"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:id="@+id/home_text"
                  android:text="Home"/>

    </LinearLayout>

    <LinearLayout android:id="@+id/newsfeed_jobs"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:paddingTop="8dp"
                  android:paddingBottom="2dp"
                  android:orientation="vertical">
        <ImageView android:id="@+id/jobs_image"
                   android:layout_width="25dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:backgroundTint="#b3b3b3"
                   android:background="@drawable/ic_portfolio"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:id="@+id/jobs_text"
                  android:text="Jobs"/>

    </LinearLayout>

    <LinearLayout android:id="@+id/newsfeed_events"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:paddingTop="8dp"
                  android:paddingBottom="2dp"
                  android:orientation="vertical">
        <ImageView android:id="@+id/events_image"
                   android:layout_width="25dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:background="@drawable/ic_newsfeed_events"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:id="@+id/events_text"
                  android:text="Events"/>

    </LinearLayout>

    <LinearLayout android:id="@+id/newsfeed_groups"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:paddingTop="8dp"
                  android:paddingBottom="2dp"
                  android:orientation="vertical">
        <ImageView android:id="@+id/groups_image"
                   android:layout_width="25dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:background="@drawable/ic_newsfeed_jobs"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:id="@+id/groups_text"
                  android:text="Groups"/>

    </LinearLayout>


</LinearLayout>
