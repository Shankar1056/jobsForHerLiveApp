<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        app:cardCornerRadius="3dp"
        app:cardBackgroundColor="@color/white"
        android:elevation="1dp"
        app:cardElevation="1dp"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        card_view:cardCornerRadius="3dp">

    <LinearLayout
            android:id="@+id/llCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cardview_border"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_weight="1">

            <!--<ImageView-->
            <!--android:id="@+id/row_icon"-->
            <!--android:src="@drawable/ic_launcher_foreground"-->
            <!--android:layout_width="60dp"-->
            <!--android:layout_height="60dp"-->
            <!--android:background="@drawable/curved_grey_border_nofill"-->
            <!--android:elevation="2dp"/>-->

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/row_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_launcher_background"
                    app:civ_border_width="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    app:civ_border_color="@color/smsp_transparent_color"
                    android:layout_toStartOf="@+id/notificaton"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="2dp"
                    android:orientation="vertical"
                    android:layout_weight="0.8">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/row_name"
                            android:layout_weight="1"
                            android:lines="2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:textSize="16sp"
                            android:paddingRight="8dp"
                            android:text="Name"
                            android:singleLine="true"/>

                </LinearLayout>

                <TextView
                        android:id="@+id/row_noOfMembers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#2680EB"
                        android:textSize="14sp"
                        android:padding="2dp"
                        android:drawablePadding="2dp"
                        android:singleLine="true"/>


                <TextView
                        android:id="@+id/row_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:textColor="@color/lightgrey"
                        android:drawablePadding="2dp"
                        android:drawableStart="@drawable/ic_companies"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:padding="2dp"
                        android:singleLine="true"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                    <TextView
                            android:id="@+id/btnApplied"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:textSize="14dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/curved_green_border"
                            android:textStyle="bold"
                            android:textColor="@color/green"
                            android:drawableRight="@drawable/ic_share_green"
                            android:drawablePadding="5dp"
                            android:text="Share"/>

                    <Button
                            android:id="@+id/apply_job"
                            android:visibility="visible"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:textColor="@color/white"
                            android:text="Following"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="end"
                            android:textSize="12sp"
                            android:textAllCaps="false"
                            android:background="@drawable/curved_grey_without_border"/>

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>


