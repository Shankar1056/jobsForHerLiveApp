<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/my_swipeRefresh_jobs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
            android:id="@+id/mainScroll_grpdetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/button_action"
            android:visibility="gone"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@color/lightestgrey"
            android:orientation="vertical">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@+id/mainlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/curved_white_border_filled_white">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical">
                        <TextView
                                android:id="@+id/jobname"
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:text="JobName"/>
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:weightSum="2"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_gravity="center_horizontal"
                                android:orientation="horizontal">
                            <TextView
                                    android:id="@+id/companytype"
                                    android:layout_marginTop="3dp"
                                    android:textColor="@color/black"
                                    android:layout_width="wrap_content"
                                    android:textAlignment="center"
                                    android:layout_weight="1"
                                    android:paddingRight="10dp"
                                    android:drawablePadding="3dp"
                                    android:layout_height="wrap_content"
                                    android:text="Company Name"/>
                            <View android:layout_width="1dp"
                                  android:layout_height="match_parent"
                                  android:layout_gravity="bottom"
                                  android:background="@color/lightestgrey1"/>
                            <TextView
                                    android:id="@+id/joblocation"
                                    android:layout_marginTop="3dp"
                                    android:textColor="@color/black"
                                    android:textAlignment="center"
                                    android:layout_weight="1"
                                    android:paddingLeft="10dp"

                                    android:drawablePadding="3dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Location"/>
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center_horizontal"
                                android:orientation="horizontal">
                            <TextView
                                    android:id="@+id/jobtiming"
                                    android:layout_marginTop="3dp"
                                    android:textColor="@color/black"
                                    android:layout_width="wrap_content"
                                    android:paddingRight="10dp"
                                    android:drawableLeft="@drawable/ic_time"
                                    android:drawablePadding="3dp"
                                    android:layout_height="wrap_content"
                                    android:text="22 hours ago"/>
                            <View android:layout_width="1dp"
                                  android:layout_height="16dp"
                                  android:layout_gravity="bottom"
                                  android:id="@+id/jobappliedView"
                                  android:background="@color/lightestgrey1"/>
                            <TextView
                                    android:id="@+id/jobapplied"
                                    android:layout_marginTop="3dp"
                                    android:textColor="@color/black"
                                    android:paddingLeft="10dp"
                                    android:drawableLeft="@drawable/ic_checklist"
                                    android:drawablePadding="3dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="24 Applied"/>
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp">
                            <ImageView android:id="@+id/starJob"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_weight="1"
                                       android:padding="5dp"
                                       android:tag="not saved"
                                       android:background="@drawable/ic_star"/>
                            <ImageView android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:padding="5dp"
                                       android:layout_marginLeft="10dp"
                                       android:layout_weight="1"
                                       android:id="@+id/shareJob"
                                       android:backgroundTint="@color/lightestgrey1"
                                       android:src="@drawable/ic_share_new"/>

                            <com.jobsforher.customviews.CustomFontButton
                                    android:visibility="visible"
                                    android:layout_weight="1"
                                    android:id="@+id/btnJoined"
                                    android:layout_width="wrap_content"
                                    android:height="10dp"
                                    android:text="Applied"
                                    android:textColor="@color/black"
                                    android:layout_gravity="right"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="10dp"
                                    android:textAllCaps="false"
                                    android:background="@drawable/curved_grey_without_border"
                                    android:layout_height="30dp"/>

                            <Button android:layout_weight="1"
                                    android:id="@+id/join_group"
                                    android:visibility="visible"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:textColor="@color/white"
                                    android:layout_marginLeft="10dp"
                                    android:text="Apply"
                                    android:layout_gravity="right"
                                    android:textSize="12sp"
                                    android:textAllCaps="false"
                                    android:background="@drawable/curved_green_border_filled_white_adapter"/>

                        </LinearLayout>
                        <TextView
                                android:id="@+id/row_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/lightgrey"
                                android:textSize="10sp"
                                android:padding="5dp"
                                android:visibility="gone"
                                android:gravity="center_horizontal"
                                android:text="This job is closed"
                                android:singleLine="true"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="12dp"
                        android:background="@drawable/curved_white_border_filled_white"
                        android:orientation="vertical">
                    <TextView
                            android:layout_marginTop="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:singleLine="true"
                            android:text="Job Details"/>

                    <TextView
                            android:id="@+id/jobskill"
                            android:layout_marginTop="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/menu_grey"
                            android:drawableLeft="@drawable/ic_user"
                            android:textSize="12dp"
                            android:drawablePadding="5dp"
                            android:singleLine="true"
                            android:text="Java/ J2EE, Node JS., Nginx, HAProxy, PAAS, Node js"/>
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">
                        <TextView
                                android:id="@+id/jobtypefulltime"
                                android:layout_marginTop="3dp"
                                android:layout_width="wrap_content"
                                android:textSize="12dp"
                                android:paddingRight="10dp"
                                android:drawableLeft="@drawable/ic_time"
                                android:drawablePadding="5dp"
                                android:visibility="gone"
                                android:textColor="@color/menu_grey"
                                android:layout_height="wrap_content"
                                android:text="Full Time"/>
                        <!--<View android:layout_width="1dp"-->
                        <!--android:layout_height="16dp"-->
                        <!--android:layout_gravity="bottom"-->
                        <!--android:background="@color/greyseparator"/>-->
                        <TextView
                                android:id="@+id/jobtypeparttime"
                                android:layout_marginTop="3dp"
                                android:textColor="@color/menu_grey"
                                android:textSize="12dp"
                                android:drawableLeft="@drawable/ic_time"
                                android:drawablePadding="5dp"
                                android:visibility="gone"
                                android:paddingRight="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Part Time"/>
                        <!--<View android:layout_width="1dp"-->
                        <!--android:layout_height="16dp"-->
                        <!--android:layout_gravity="bottom"-->
                        <!--android:background="@color/greyseparator"/>-->
                        <TextView
                                android:id="@+id/jobtypefreelance"
                                android:layout_marginTop="3dp"
                                android:textColor="@color/menu_grey"
                                android:textSize="12dp"
                                android:visibility="gone"
                                android:drawableLeft="@drawable/ic_freelance"
                                android:drawablePadding="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Freelance"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">
                        <TextView
                                android:id="@+id/jobexp"
                                android:layout_marginTop="3dp"
                                android:layout_width="wrap_content"
                                android:textSize="12dp"
                                android:paddingRight="10dp"
                                android:drawableLeft="@drawable/ic_briefcase_job"
                                android:drawablePadding="5dp"
                                android:textColor="@color/menu_grey"
                                android:layout_height="wrap_content"
                                android:text="4 - 8 Yrs"/>
                        <View android:layout_width="1dp"
                              android:layout_height="16dp"
                              android:layout_gravity="bottom"
                              android:id="@+id/jobrupeeView"
                              android:background="@color/lightestgrey1"/>
                        <TextView
                                android:id="@+id/jobrupee"
                                android:layout_marginTop="3dp"
                                android:textColor="@color/menu_grey"
                                android:paddingLeft="10dp"
                                android:textSize="12dp"
                                android:drawableLeft="@drawable/ic_rupee"
                                android:drawablePadding="5dp"
                                android:paddingRight="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="6.5 - 8 Lakhs"/>
                    </LinearLayout>
                    <TextView
                            android:layout_marginTop="3dp"
                            android:textColor="#9A9A9A"
                            android:textSize="12dp"
                            android:paddingRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Industry"/>
                    <TextView
                            android:id="@+id/jobindustry"
                            android:textColor="@color/menu_grey"
                            android:textSize="12dp"
                            android:paddingRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Software/Technology"/>
                    <TextView
                            android:layout_marginTop="3dp"
                            android:textColor="#9A9A9A"
                            android:textSize="12dp"
                            android:paddingRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Function Area"/>
                    <TextView
                            android:id="@+id/jobfunctionalarea"
                            android:textColor="@color/menu_grey"
                            android:textSize="12dp"
                            android:paddingRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Product"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="visible"
                        android:padding="12dp"
                        android:background="@drawable/curved_white_border_filled_white"
                        android:orientation="vertical">
                    <TextView
                            android:layout_marginTop="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:singleLine="true"
                            android:text="Description"/>

                    <at.blogc.android.views.ExpandableTextView
                            android:id="@+id/jobdescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/menu_grey"
                            android:text="Description"
                            android:maxLines="5"
                            android:ellipsize="end"
                            app:animation_duration="750"/>
                    <TextView
                            android:id="@+id/seemore_desc"
                            android:layout_marginTop="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:singleLine="true"
                            android:text="See More"/>
                    <!--<TextView-->
                    <!--android:id="@+id/jobdescription"-->
                    <!--android:textColor="@color/menu_grey"-->
                    <!--android:textSize="12dp"-->
                    <!--android:paddingRight="10dp"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."/>-->
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="10dp"
                              android:padding="12dp"
                              android:layout_gravity="center_horizontal"
                              android:background="@drawable/curved_white_border_filled_white"
                              android:orientation="horizontal">
                    <TextView
                            android:layout_marginTop="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:textColor="@color/menu_grey"
                            android:singleLine="true"
                            android:text="Send me jobs like this"/>
                    <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:theme="@style/SCBSwitch"
                            android:textAppearance="?android:attr/textAppearanceMedium"/>

                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="12dp"
                        android:visibility="visible"
                        android:background="@drawable/curved_white_border_filled_white"
                        android:orientation="vertical">
                    <TextView
                            android:layout_marginTop="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:singleLine="true"
                            android:text="About Us"/>
                    <at.blogc.android.views.ExpandableTextView
                            android:id="@+id/jobaboutus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/menu_grey"
                            android:text="Description"
                            android:maxLines="5"
                            android:ellipsize="end"
                            app:animation_duration="750"/>
                    <TextView
                            android:id="@+id/seemore_aboutus"
                            android:layout_marginTop="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:singleLine="true"
                            android:text="See More"/>
                    <!--<TextView-->
                    <!--android:id="@+id/jobaboutus"-->
                    <!--android:textColor="@color/menu_grey"-->
                    <!--android:textSize="12dp"-->
                    <!--android:paddingRight="10dp"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."/>-->
                </LinearLayout>
                <LinearLayout android:id="@+id/create_preferences_layout"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="10dp"
                              android:padding="12dp"
                              android:background="@drawable/curved_white_border_filled_white"
                              android:orientation="horizontal">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:src="@drawable/ic_alarm"/>
                    <TextView
                            android:layout_marginTop="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/menu_grey"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:text="Create a job alert for this search"/>
                    <Button android:id="@+id/create_preferences"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:textAllCaps="false"
                            android:text="Create"
                            android:background="@color/green"
                            android:textColor="@color/white"/>

                </LinearLayout>
                <!--About US Layout design-->
                <LinearLayout
                        android:id="@+id/aboutus_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:background="@drawable/curved_white_border_filled_white">
                    <!--<VideoView android:layout_width="match_parent"-->
                    <!--android:layout_height="150dp"-->
                    <!--android:background="@drawable/curved_white_border_filled_white"/>-->
                    <TextView
                            android:id="@+id/aboutusheader"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:text="About Group Text"/>
                    <TextView
                            android:id="@+id/aboutusdept"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="12dp"
                            android:drawableLeft="@drawable/ic_category"
                            android:drawablePadding="2dp"
                            android:textColor="@color/menu_grey"
                            android:text="About Group Text"/>
                    <TextView
                            android:id="@+id/aboutusdescription"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="12dp"
                            android:textColor="@color/menu_grey"
                            android:text="Cha Ching! For someone who's mastered the art of managing their daily bills, a career in Finance is only an extension of such mastery. Join this band of women to keep that passion rolling.
This group is for you to find voices that share your concerns, challenges and triumphs. To ask questions, to answer them, to learn, relearn and build a workplace that is fair and open to all. To Start, Restart and Rise in your career and in life... Together!"/>


                </LinearLayout>
                <!--Posts layout design-->
                <LinearLayout
                        android:id="@+id/posts_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:background="@color/smsp_transparent_color">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            android:visibility="visible"
                            android:background="@drawable/curved_white_border_filled_white">
                        <TextView
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginLeft="12dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:text="Create Post"/>
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginRight="10dp">
                            <!--<ImageView-->
                            <!--android:layout_width="40dp"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:src="@drawable/ic_user"/>-->
                            <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/group_icon_posts"
                                    android:layout_marginRight="10dp"
                                    android:src="@drawable/ic_user"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/bg_circle"
                                    android:layout_weight="1"
                                    android:layout_centerHorizontal="true"/>
                            <EditText
                                    android:id="@+id/edittext_createpost"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:hint="Write something here.."
                                    android:textSize="12dp"
                                    android:paddingLeft="10dp"
                                    android:layout_weight="15"
                                    android:focusable="false"
                                    android:background="@drawable/curved_grey_border_filled"/>
                            <ImageView
                                    android:id="@+id/opencreatepost"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:visibility="gone"
                                    android:paddingLeft="10dp"
                                    android:src="@drawable/ic_add"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            android:visibility="visible"
                            android:background="@color/white">
                        <!--@drawable/curved_white_border_filled_white-->
                        <TextView
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginLeft="12dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:text="Posts"/>
                        <View android:layout_width="match_parent" android:layout_height="1dp"
                              android:background="@color/lightestgrey"/>
                        <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/posts_recycler_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:scrollbars="vertical"
                                android:nestedScrollingEnabled="false"
                        />
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:weightSum="2">
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                                      android:text="Previous"
                                      android:id="@+id/loadprev"
                                      android:visibility="gone"
                                      android:gravity="left"
                                      android:textColor="@color/green"
                                      android:layout_weight="1"/>
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                                      android:text="Loading..."
                                      android:id="@+id/loadnext"
                                      android:visibility="visible"
                                      android:gravity="right"
                                      android:textColor="@color/green"
                                      android:layout_weight="1"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <!--Photos layout design-->
                <LinearLayout
                        android:id="@+id/photos_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:background="@drawable/curved_white_border_filled_white">
                    <TextView
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:text="Photos"/>
                    <View android:layout_width="match_parent" android:layout_height="1dp"
                          android:background="@color/lightestgrey"/>
                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_photos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:scrollbars="vertical"
                            android:nestedScrollingEnabled="false"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                    />
                </LinearLayout>
                <!--Videos layout design-->
                <LinearLayout
                        android:id="@+id/videos_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:background="@drawable/curved_white_border_filled_white">
                    <TextView
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:text="Videos"/>
                    <View android:layout_width="match_parent" android:layout_height="1dp"
                          android:background="@color/lightestgrey"/>
                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_videos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:scrollbars="vertical"
                            android:nestedScrollingEnabled="false"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                    />
                </LinearLayout>
                <!--No Data Please Login-->
                <LinearLayout
                        android:id="@+id/default_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:background="@drawable/curved_white_border_filled_white">
                    <TextView
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:text="Join a group today to connect, learn, and share!"/>
                </LinearLayout>

            </LinearLayout>
            <ImageView android:id="@+id/job_logo"
                       android:layout_width="80dp"
                       android:layout_height="80dp"
                       android:layout_marginTop="20dp"
                       android:scaleType="fitXY"
                       android:adjustViewBounds="true"
                       android:src="@drawable/ic_launcher_background"
                       android:layout_gravity="center_horizontal"
                       android:background="@drawable/curved_grey_border_nofill"/>
        </FrameLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:visibility="gone"
            android:background="@drawable/curved_white_border_filled_white"
            android:id="@+id/button_action_applied">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_success_applied"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Applied Successfully!"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_gravity="center_horizontal"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thank you for applying on this job post, We will get back to \n you shortly,Meanwhile start browsing our other jobs"
                android:textStyle="bold"
                android:lines="2"
                android:paddingTop="10dp"
                android:textColor="@color/lightgrey"
                android:textSize="12dp"
                android:layout_gravity="center_horizontal"/>
        <Button android:id="@+id/find_morejobs_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:layout_marginBottom="20dp"
                android:background="@color/green"
                android:textColor="@color/white"
                android:text="Find more jobs"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottombar"
            android:orientation="vertical"
            android:id="@+id/button_action">
        <Button
                android:id="@+id/button_apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:background="@color/green"
                android:textColor="@color/white"
                android:text="Apply"/>
        <Button
                android:id="@+id/button_applied"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:background="@null"
                android:textColor="@color/greyseparator"
                android:text="Applied"/>
    </LinearLayout>

    <include
            android:id="@+id/bottombar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            layout="@layout/activity_footer" />

</RelativeLayout>
