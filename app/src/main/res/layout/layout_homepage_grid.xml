<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        app:cardCornerRadius="3dp"
        app:cardBackgroundColor="@color/white"
        android:elevation="0dp"
        app:cardElevation="0dp"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_height="150dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        card_view:cardCornerRadius="3dp">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:id="@+id/llCard"
                  android:gravity="center"
                  android:background="@drawable/curved_grey_border_nofill"
                  android:orientation="vertical">

        <!--<RelativeLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center"-->
        <!--android:orientation="vertical">-->

        <ImageView
                android:id="@+id/row_image"
                android:src="@drawable/jobs_default"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/profileview_grey"
                android:background="@null"
                android:elevation="1dp"/>
        <TextView
                android:id="@+id/row_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_below="@id/row_image"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="Hello"
                android:textSize="14dp"
                android:singleLine="true"/>

        <TextView
                android:id="@+id/row_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_below="@id/row_text"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:lines="2"
                android:text="Hello"
                android:textSize="12dp"/>
        <!--</RelativeLayout>-->

    </LinearLayout>

</androidx.cardview.widget.CardView>