<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="wrap_content"
              android:gravity="bottom"
        android:focusableInTouchMode="true"
              android:background="@color/white">

    <TextView
            android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="16dp"
              android:padding="10dp"
              android:textStyle="bold"
              android:textColor="@color/greyseparator"
              android:drawableRight="@drawable/ic_close_black"
              android:text="Verify Your Mobile Number"/>
    <View android:layout_width="match_parent" android:layout_height="2dp"
          android:background="@color/lightestgrey1"/>
    <LinearLayout android:id="@+id/edit_post"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingLeft="15dp"
                  android:paddingTop="15dp"
                  android:paddingRight="15dp"
                  android:orientation="vertical">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@color/lightgrey"
                android:text="Verification code has been sent to your mobile number."/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/lightgrey"
                android:text="Please enter below"/>
        <EditText android:id="@+id/secemail_text"
                  android:layout_width="match_parent"
                  android:inputType="number"
                  android:hint="Enter otp"
                  android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:visibility="visible"
                  android:paddingTop="15dp"
                  android:paddingBottom="15dp"
                  android:paddingLeft="25dp"
                  android:paddingRight="25dp"
                  android:layout_gravity="center_horizontal"
                  android:orientation="horizontal">

        <Button android:id="@+id/save_secemail"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:background="@color/green"
                android:text="Submit"/>
    </LinearLayout>
</LinearLayout>
