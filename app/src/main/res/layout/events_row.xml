<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        app:cardCornerRadius="3dp"
        app:cardBackgroundColor="@color/white"
        android:elevation="0dp"
        app:cardElevation="0dp"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        card_view:cardCornerRadius="3dp">

    <ImageView
            android:id="@+id/row_icon"
            android:src="@drawable/event_default"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/curved_grey_border_filled"
            android:layout_marginLeft="5dp"
            android:elevation="1dp"/>

    <LinearLayout
            android:id="@+id/llCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:background="@drawable/cardview_border"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingLeft="30dp"
                android:orientation="horizontal"
                android:layout_weight="1">



            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="2dp"
                    android:orientation="vertical"
                    android:layout_weight="0.8">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/row_name"
                            android:layout_weight="1"
                            android:maxLines="4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:paddingRight="8dp"
                            android:text="Name"
                            android:singleLine="false"/>

                    <ImageView android:id="@+id/hotjobs_icon"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:visibility="gone"
                               android:src="@drawable/ic_group_featured"/>
                    <ImageView android:id="@+id/hotjobs_share"
                               android:layout_marginLeft="10dp"
                               android:layout_width="20dp"
                               android:layout_height="20dp"
                               android:backgroundTint="@color/green"
                               android:src="@drawable/ic_share_green"/>
                </LinearLayout>

                <TextView
                        android:id="@+id/row_noOfMembers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_tag"
                        android:textColor="@color/blue"
                        android:textSize="14sp"
                        android:padding="2dp"
                        android:drawablePadding="2dp"
                        android:singleLine="true"/>

                <TextView
                        android:id="@+id/row_comp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_companies"
                        android:textColor="@color/lightgrey"
                        android:textSize="14sp"
                        android:padding="2dp"
                        android:textStyle="bold"
                        android:text="19 Sep 2020 to 19 Sep 2020"
                        android:drawablePadding="2dp"/>


                <TextView
                        android:id="@+id/row_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:textColor="@color/lightgrey"
                        android:drawablePadding="2dp"
                        android:drawableStart="@drawable/ic_date"
                        android:textSize="14sp"
                        android:lines="2"
                        android:gravity="center_vertical"
                        android:padding="2dp"
                        android:text="11:00 am to 12:00pm"
                        android:singleLine="true"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:orientation="vertical">
                        <TextView
                                android:id="@+id/row_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="fill_vertical"
                                android:textColor="@color/lightgrey"
                                android:textSize="14sp"
                                android:padding="2dp"
                                android:drawablePadding="2dp"
                                android:ellipsize="end"
                                android:lineSpacingExtra="6dp"
                                android:layout_marginBottom="5dp"
                                android:includeFontPadding="false"
                                android:layout_weight="1"/>

                        <TextView
                                android:id="@+id/row_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:textColor="@color/lightgrey"
                                android:drawablePadding="2dp"
                                android:drawableStart="@drawable/ic_placeholderr"
                                android:textSize="14sp"
                                android:padding="2dp"
                                android:visibility="visible"
                                android:gravity="center_vertical"
                                android:singleLine="true"/>


                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:orientation="vertical"
                            android:layout_weight="1">

                        <TextView
                                android:id="@+id/row_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:drawablePadding="2dp"
                                android:textSize="14sp"
                                android:padding="2dp"
                                android:text="FREE"
                                android:visibility="visible"
                                android:gravity="center_vertical"
                                android:singleLine="true"/>

                        <TextView
                                android:id="@+id/row_price_disc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:textColor="@color/black"
                                android:textStyle="normal"
                                android:drawablePadding="2dp"
                                android:textSize="14sp"
                                android:padding="2dp"
                                android:text="FREE"
                                android:visibility="visible"
                                android:gravity="center_vertical"
                                android:singleLine="true"/>

                        <com.jobsforher.customviews.CustomFontButton
                                android:visibility="visible"
                                android:id="@+id/btnApplied"
                                android:layout_width="wrap_content"
                                android:textColor="@color/black"
                                android:text="Registered"
                                android:layout_gravity="end"
                                android:textSize="12sp"
                                android:padding="5dp"
                                android:textAllCaps="false"
                                android:background="@drawable/curved_grey_without_border"
                                android:layout_height="29dp"/>

                        <Button
                                android:id="@+id/apply_job"
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:textColor="@color/white"
                                android:text="Register"
                                android:layout_gravity="end"
                                android:textSize="12sp"
                                android:textAllCaps="false"
                                android:background="@drawable/curved_green_border_filled_white_adapter"/>

                        <TextView
                                android:id="@+id/row_registration_closed"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginLeft="3dp"
                                android:drawablePadding="2dp"
                                android:textSize="14sp"
                                android:padding="2dp"
                                android:text="Registration closed"
                                android:visibility="gone"
                                android:gravity="right"
                                android:singleLine="false"/>
                        <TextView
                                android:id="@+id/row_interested"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/green"
                                android:textStyle="bold"
                                android:layout_marginLeft="3dp"
                                android:drawablePadding="2dp"
                                android:textSize="14sp"
                                android:padding="2dp"
                                android:text="Interested"
                                android:visibility="visible"
                                android:gravity="center_vertical"
                                android:singleLine="true"/>
                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>


