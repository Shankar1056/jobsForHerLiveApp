<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!--<View-->
    <!--android:id="@+id/View01"-->
    <!--android:layout_marginTop="10dp"-->
    <!--android:layout_width="10dp"-->
    <!--android:layout_height="10dp"-->
    <!--android:layout_marginLeft="27dp"-->
    <!--android:background="@drawable/circle_draw" />-->

    <!--android:layout_below="@id/View01"-->
    <View
            android:layout_width="3dip"
            android:layout_height="match_parent"

            android:layout_marginLeft="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/layoutRelative"
            android:background="#0f0"/>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layoutRelative"
                    xmlns:card_view="http://schemas.android.com/tools">

        <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/bordergrey"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                card_view:cardUseCompatPadding="true">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                <TextView
                        android:id="@+id/row_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textColor="@color/colorAccent"
                        android:text="Hello"
                        android:textSize="10dp"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:layout_marginTop="5dp"
                />
                <TextView
                        android:id="@+id/row_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textColor="@color/colorAccent"
                        android:text="Hello"
                        android:textSize="10dp"
                        android:padding="2dp"
                        android:singleLine="true"
                />
                <TextView
                        android:id="@+id/row_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textColor="@color/colorAccent"
                        android:text="Hello"
                        android:textSize="10dp"
                        android:padding="2dp"
                        android:singleLine="true"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textColor="@color/colorAccent"
                        android:text="Hello"
                        android:textSize="10dp"
                        android:padding="2dp"
                        android:singleLine="true"
                />
                <TextView
                        android:id="@+id/row_noOfMembers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textColor="@color/colorAccent"
                        android:text="Hello"
                        android:textSize="10dp"
                        android:padding="2dp"
                        android:singleLine="true"
                />
                <TextView
                        android:id="@+id/row_description"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="fill_vertical"
                        android:textColor="@color/colorAccent"
                        android:text="Hello"
                        android:textSize="10dp"
                        android:padding="2dp"
                        android:maxLines="3"
                        android:layout_marginBottom="5dp"
                        android:includeFontPadding="false"
                        android:layout_weight="1"
                />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <ImageView
                android:src="@drawable/ic_launcher_foreground"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/curved_grey_border_nofill"
                android:elevation="2dp"/>
    </RelativeLayout>
