<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <!-- HEADER -->
    <LinearLayout
            android:id="@+id/top_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:padding="15dp"
            android:orientation="horizontal"
            android:weightSum="1">

        <ImageView
                android:id="@+id/editprofile_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_white_new"
                android:layout_weight=".1"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Intro"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_weight=".7"/>

        <TextView
                android:id="@+id/saveTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textAlignment="textEnd"
                android:layout_weight=".2"/>

    </LinearLayout>
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_below="@+id/top_header">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/top_header"
                android:layout_marginBottom="160dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical">
            <LinearLayout
                    android:id="@+id/lifestages"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/opensansregular"
                        android:textColor="#5B5B5B"
                        android:text="Life Stages*"/>
                <!--<EditText-->
                <!--android:id="@+id/edittext_leftstages"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"/>-->
                <AutoCompleteTextView
                        android:id="@+id/edittext_leftstages"
                        android:drawableRight="@drawable/ic_drop_down_arrow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <Spinner
                        android:visibility="invisible"
                        android:id="@+id/spinner1"
                        android:layout_alignParentEnd="true"
                        android:dropDownWidth="fill_parent"
                        android:layout_width="fill_parent"
                        android:layout_height="10dp"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/fullname"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Full Name*"/>
                <EditText
                        android:id="@+id/edittext_fullname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/opensansregular"
                        android:textColor="#5B5B5B"
                        android:inputType="none"
                        android:focusable="false"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/degree"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Degree (Highest Qualification)*"/>
                <EditText
                        android:id="@+id/edittext_degree"
                        android:textSize="14sp"
                        android:fontFamily="@font/opensansregular"
                        android:textColor="#5B5B5B"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/university"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="University/College/School"/>
                <EditText
                        android:id="@+id/edittext_university"
                        android:textSize="14sp"
                        android:fontFamily="@font/opensansregular"
                        android:textColor="#5B5B5B"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/whyimoncareerbreak"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Here's why I am on a career break*"/>
                <EditText
                        android:id="@+id/edittext_whycareerbreak"
                        android:textSize="14sp"
                        android:fontFamily="@font/opensansregular"
                        android:textColor="#5B5B5B"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/designation"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Latest Designation*"/>
                <EditText
                        android:id="@+id/edittext_designation"
                        android:textSize="14sp"
                        android:fontFamily="@font/opensansregular"
                        android:textColor="#5B5B5B"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/company"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Latest company Name"/>
                <EditText
                        android:id="@+id/edittext_company"
                        android:textSize="14sp"
                        android:fontFamily="@font/opensansregular"
                        android:textColor="#5B5B5B"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/location"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location*"/>
                <EditText
                        android:id="@+id/edittext_location"
                        android:textSize="14sp"
                        android:fontFamily="@font/opensansregular"
                        android:textColor="#5B5B5B"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/aboutme"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="About Me"/>
                <EditText
                        android:id="@+id/edittext_aboutme"
                        android:textSize="14sp"
                        android:fontFamily="@font/opensansregular"
                        android:textColor="#5B5B5B"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="40dp"
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <Button android:id="@+id/savecontinue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@color/green"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:textAllCaps="false"
                        android:layout_gravity="center_horizontal"
                        android:text="Save and Continue"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>
